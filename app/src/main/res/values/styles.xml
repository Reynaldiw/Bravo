<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitleExtraBig" parent="TextStyleDefault">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="TextTitleBig" parent="TextStyleDefault">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="TextTitleNormal" parent="TextStyleDefault">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="tabMode">fixed</item>
        <item name="android:actionBarTabTextStyle">@style/TextTitleBig</item>
        <item name="tabIndicatorHeight">@dimen/dimen_3dp</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@color/gray</item>
    </style>

    <style name="AppbarLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="RecyclerViewStyleDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AppTheme.TranslucentStatusBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>
    </style>

</resources>
